{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "air -c .air.toml",
    "start": "go run ./cmd/api",
    "build": "go build -o ./bin/api ./cmd/api",
    "test": "go test -v ./...",
    "lint": "golangci-lint run ./...",
    "lint:fix": "golangci-lint run ./... --fix",
    "services:up": "dotenv -c -- docker compose -f ./dev-services.yml up -d",
    "services:down": "dotenv -c -- docker compose -f ./dev-services.yml down",
    "install": "go mod tidy"
  }
}