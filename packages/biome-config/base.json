{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
    "root": false,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
    "json": {
        "formatter": {
            "enabled": true
        },
        "linter": {
            "enabled": false
        }
    },
    "css": {
        "formatter": {
            "enabled": true
        },
        "linter": {
            "enabled": false
        }
    },
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}