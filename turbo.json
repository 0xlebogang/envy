{
  "$schema": "https://turborepo.com/schema.json",
  "noUpdateNotifier": true,
  "globalDependencies": ["!README.md", "!LICENSE", "!CHANGELOG.md", ".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".vercel/output/**"]
    },
    "test": {},
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
