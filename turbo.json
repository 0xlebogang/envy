{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "stream",
	"globalDependencies": ["!.husky", "!.vscode", "!lint-staged.config.cjs"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "build/**"]
		},
		"test": {},
		"lint": {},
		"lint:fix": {}
	}
}
